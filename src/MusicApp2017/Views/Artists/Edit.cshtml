@model MusicApp2017.Models.Artist
<h2>Edit Artist</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="ArtistID" />
    <label asp-for="Name"></label>
    <input asp-for="Name" /><br />
    <span asp-validation-for="Name" class="text-danger"></span>
    <span class="alert-danger">@ViewData["Error"]</span> <br />
    <label asp-for="Bio"></label>
    <textarea asp-for="Bio"></textarea> <br />
    <input type="submit" value="Save" class="btn btn-default" />
</form>
<a asp-action="Index">Return to Artist List</a>