@model MusicApp2017.Models.ApplicationUser

<h3>Change Favorite Genre</h3>
<form asp-controller="Account" asp-action="Edit" method="post" class="form-horizontal">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="GenreID"></label>
            <select asp-for="GenreID" asp-items="ViewBag.GenreID"></select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
        